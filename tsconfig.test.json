{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "next-env.d.ts",
    "jest-setup.ts",
    "__mocks__/**/*.tsx?",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
